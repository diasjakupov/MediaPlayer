<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="video"
            type="com.example.mediaplayer.data.models.video.VideoInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/CustomBottomSheetDialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".ui.fragments.videoList.VideoInfoFragment">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/cantora_one"
            android:text="@{video.title}"
            android:textAlignment="viewStart"
            android:textColor="@color/orange"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <LinearLayout
                android:id="@+id/videoInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_info_click"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="bottom|start"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="0.04"
                    android:src="@drawable/ic_info"
                    app:tint="@color/itemVideoInfoColor" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Information"
                    android:textColor="@color/itemVideoInfoColor"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/videoAddToPlaylist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_info_click"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="bottom|start"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="0.04"
                    android:src="@drawable/ic_playlist_play"
                    app:tint="@color/itemVideoInfoColor" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Add to playlist"
                    android:textColor="@color/itemVideoInfoColor"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/videoAddToFavorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_info_click"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="bottom|start"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="0.04"
                    android:src="@drawable/ic_favorite"
                    app:tint="@color/itemVideoInfoColor" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Add to favorite"
                    android:textColor="@color/itemVideoInfoColor"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/videoDeleteItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_info_click"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="bottom|start"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="0.03"
                    android:foregroundGravity="left"
                    android:src="@drawable/ic_delete"
                    app:tint="@color/itemVideoInfoColor" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Delete"
                    android:textColor="@color/itemVideoInfoColor"
                    android:textSize="22sp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>