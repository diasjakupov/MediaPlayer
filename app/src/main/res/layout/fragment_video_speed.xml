<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="400dp"
    android:layout_gravity="bottom"
    android:layout_marginBottom="32dp"
    android:backgroundTint="#70000000"
    android:foregroundGravity="bottom"
    app:layout_anchorGravity="bottom"
    tools:context=".ui.fragments.videoPlayer.VideoSpeedFragment">

    <TextView
        android:id="@+id/videoSpeedIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.slider.Slider
        android:id="@+id/videoSpeedSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:valueFrom="0.25"
        android:valueTo="4.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoSpeedIndicator"
        app:thumbColor="@color/darkOrange"
        app:trackColor="@color/orange" />

</androidx.constraintlayout.widget.ConstraintLayout>