<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MediaPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/customBottomNav</item>
        <item name="actionBarStyle">@style/customToolbar</item>
        <item name="actionBarTheme">@style/customToolbar</item>
    </style>



    <style name="customToolbar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/white</item>
        <item name="android:textColorPrimary">@color/actionBarTitleColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24dp</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>


    <style name="customBottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/bottomNav</item>
        <item name="itemTextColor">@color/bottom_nav_item</item>
        <item name="itemIconTint">@color/bottom_nav_item</item>
    </style>
</resources>